<div class="row m-b-20">
  <div class="col-md-12">

    <%= form_for member, url: path, method: :put, html: {class: "form-horizontal", style: "height:100%;"} do |f| %>

      <div class="form-group m-t-20">
        <label class="col-sm-3 control-label">First Name</label>
        <div class="col-sm-9">
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
      </div>

      <div class="form-group m-t-20">
        <label class="col-sm-3 control-label">Last Name</label>
        <div class="col-sm-9">
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
      </div>

      <% if current_admin.present? %>
        <div class="form-group m-t-20">
          <label class="col-sm-3 control-label">Email</label>
          <div class="col-sm-9">
            <%= f.email_field :email, class: "form-control" %>
          </div>
        </div>
      <% end %>

      <div class="form-group m-t-20">
        <label class="col-sm-3 control-label">Time Zone</label>
        <div class="col-sm-9">
          <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, {}, class: "form-control" %>
        </div>
      </div>

      <div class="text-right">
        <%= f.submit "Submit", class: "btn btn-success m-r-10" %>
      </div>

    <% end %>
  </div>
</div>
