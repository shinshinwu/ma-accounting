      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
      <![endif]-->
</head>

<body>
  <% flash.each do |key, value| %>
    <div class="flash alert-<%= key %> alerttop">
      <%= value %>
    </div>
  <% end %>

  <%= render "home/navbar" %>
  <%= content_for?(:content) ? yield(:content) : yield %>
  <%= render "home/footer" %>
