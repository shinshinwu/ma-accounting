<% content_for :site_title do %>Create New Module<% end %>

<% content_for :breadcrumbs do %>
  <ol class="breadcrumb">
    <li><%= link_to 'All Modules', course_modules_path %></li>
    <li class="active"><%= "Create New Module" %></li>
  </ol>
<% end %>

<%= form_for course_module, url: course_modules_path, method: :post, html: {class: "form-horizontal", style: "height:100%;"} do |f| %>

<div class="white-box">
  <div class="row m-b-20">
    <div class="col-md-12 text-center">
      <h1>Create New Module</h1>

      <div class="form-group m-t-20">
        <label class="col-sm-3 control-label">Module Name</label>
        <div class="col-sm-9">
          <%= f.text_field :name, class: "form-control", required: true %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-3 control-label">Unit</label>
        <div class="col-sm-9">
          <%= f.select :unit_id, Unit.all.collect { |u| [ u.name, u.id ] }, {include_blank: true, {:class => "form-control", :required => true} %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-3 control-label">Module Order</label>
        <div class="col-sm-9">
          <%= f.number_field :sort_order, {:class => "form-control", :required => true, min: 1, max: (CourseModule.all.size + 10)} %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-3 control-label">Duration</label>
        <div class="col-sm-9">
          <div class="input-group">
            <%= f.number_field :duration_days, {:class => "form-control", :required => true, min: 1, max: 30} %>
            <span class="input-group-addon">Days</span>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

<div class="panel panel-inverse">
  <div class="panel-heading panel-title m-b-20">
    <i class="fa fa-list-alt"></i>
      Course Videos
  </div>
  <div class="panel-wrapper collapse in" aria-expanded="true">
    <div class="panel-body">
      <div class="col-md-10 col-md-offset-1">
        <% @videos.each do |video| %>
          <h3 class="box-title">Video #<%= video.sort_order %></h3>
          <hr>

          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label class="control-label">First Name</label>
                <input type="text" id="firstName" class="form-control" placeholder="John doe">
                <span class="help-block"> This is inline help </span> </div>
            </div>
            <!--/span-->
            <div class="col-md-6">
              <div class="form-group has-error">
                <label class="control-label">Last Name</label>
                <input type="text" id="lastName" class="form-control" placeholder="12n">
                <span class="help-block"> This field has error. </span> </div>
            </div>
            <!--/span-->
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="panel panel-inverse">
  <div class="panel-heading panel-title m-b-20">
    <i class="fa fa-list-alt"></i>
      Supporting Materials
  </div>
  <div class="panel-wrapper collapse in" aria-expanded="true">
    <div class="panel-body">
      <div class="col-md-10 col-md-offset-1">
        <p>
          I am waiting to be finalized to start implementation
        </p>
      </div>
    </div>
  </div>
</div>

<div class="panel panel-inverse">
  <div class="panel-heading panel-title m-b-20">
    <i class="fa fa-list-alt"></i>
      Assignments and Examples
  </div>
  <div class="panel-wrapper collapse in" aria-expanded="true">
    <div class="panel-body">
      <div class="col-md-10 col-md-offset-1">
        <p>
          I am waiting to be finalized to start implementation
        </p>
      </div>
    </div>
  </div>
</div>
<% end %>
